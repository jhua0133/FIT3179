{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": "container",
    "background": "#E9F7E9",
    "config": {
        "font": "Cabin",
        "legend": {
            "labelFontSize": 13,
            "titleFontSize": 15
        },
        "axis": {
            "labelFontSize": 13,
            "titleFontSize": 15
        },
        "style": {
            "cell": {
                "stroke": "transparent"
            }
        }
    },
    "data": {
        "url": "https://raw.githubusercontent.com/jhua0133/FIT3179/refs/heads/main/AUS-stackedbar-year.csv"
    },
    "transform": [
        {
            "window": [
                {
                    "op": "sum",
                    "field": "TotalVisitors",
                    "as": "TotalVisitorsPerState"
                }
            ],
            "groupby": [
                "State"
            ]
        }
    ],
    "layer": [
        {
            "mark": {
                "type": "bar",
                "cornerRadiusTopRight": 15,
                "cornerRadiusTopLeft": 15
            },
            "encoding": {
                "x": {
                    "field": "State",
                    "type": "nominal",
                    "title": "State",
                    "sort": [
                        "NSW", "VIC", "QLD", "WA", "SA", "NT", "TAS", "ACT"
                    ],
                    "axis": {
                        "labelAngle": 0,
                        "grid": false
                    }
                },
                "y": {
                    "field": "TotalVisitors",
                    "type": "quantitative",
                    "title": "Total Visitors (Millions)",
                    "axis": {
                        "grid": false
                    }
                },
                "color": {
                    "field": "Year",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "2008-09",
                            "2018-19"
                        ],
                        "range": [
                            "#8DD3C7",
                            "#4294C7"
                        ]
                    },
                    "title": "Year"
                },
                "order": {
                    "field": "SortOrder",
                    "type": "quantitative"
                },
                "tooltip": [
                    {
                        "field": "State",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "Year",
                        "type": "nominal",
                        "title": "Year"
                    },
                    {
                        "field": "TotalVisitors",
                        "type": "quantitative",
                        "title": "Total Visitors",
                        "format": ",.1f"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "size": 13
            },
            "encoding": {
                "x": {
                    "field": "State",
                    "type": "nominal",
                    "sort": [
                        "NSW", "VIC", "QLD", "WA", "SA", "NT", "TAS", "ACT"
                    ]
                },
                "y": {
                    "aggregate": "sum",
                    "field": "TotalVisitors",
                    "type": "quantitative"
                },
                "text": {
                    "aggregate": "sum",
                    "field": "TotalVisitors",
                    "type": "quantitative"
                },
                "color": {
                    "value": "black"
                },
                "yOffset": {
                    "value": -6.5
                }
            }
        },
        
        {
            "mark": {
                "type": "text",
                "align": "left",
                "dx": 10,
                "dy": -10,
                "color": "black",
                "fontSize": 14,
                "fontWeight": "normal"
            },
            "encoding": {
                "x": {"datum": "VIC", "type": "nominal"},
                "y": {"datum": 5.5, "type": "quantitative"},
                "text": {"value": "In 2008-9, more people visited QLD compared to VIC"}
            }
        },
        {
            "mark": "rule",
            "encoding": {
                "x": {"datum": "VIC", "type": "nominal"},
                "y": {"datum": 3.7, "type": "quantitative"},
                "y2": {"datum": 5.5, "type": "quantitative"}, 
                "color": {"value": "black"}
            }
        },
      
        {
            "mark": {
                "type": "text",
                "align": "left",
                "dx": 10,
                "dy": -10,
                "color": "black",
                "fontSize": 14,
                "fontWeight": "normal"
            },
            "encoding": {
                "x": {"datum": "QLD", "type": "nominal"},
                "y": {"datum": 4.9, "type": "quantitative"},
                "text": {"value": "However, in 2018-19 more people visted VIC compared to QLD"}
            }
        },
        {
            "mark": "rule",
            "encoding": {
                "x": {"datum": "QLD", "type": "nominal"},
                "y": {"datum": 3.7, "type": "quantitative"},
                "y2": {"datum": 5, "type": "quantitative"}, 
                "color": {"value": "black"}
            }
        }
    ]
}
